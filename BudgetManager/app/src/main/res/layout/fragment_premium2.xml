

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.premium.Premium1Fragment"
            android:paddingTop="170dp"
            android:paddingBottom="105dp"
            android:background="@color/premium_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/premium_popup_not_premium_feature1_title" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/premium_popup_not_premium_feature1_message"
            android:textSize="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@android:color/white"
            android:gravity="center"/>

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="255dp"
            android:layout_height="180dp"
            android:src="@drawable/daily_reminder"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</ScrollView>
