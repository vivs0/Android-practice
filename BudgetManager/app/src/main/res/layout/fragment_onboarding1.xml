
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".view.welcome.Onboarding1Fragment">

    <ScrollView android:id="@+id/onboarding_screen1_top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="95dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="40dp"
                android:textColor="@android:color/white"
                android:text="@string/onboarding_screen_1_title"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:text="@string/onboarding_screen_1_message"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textSize="30dp"
                android:textColor="@android:color/white"
                android:text="@string/onboarding_screen_1_message2"
                android:gravity="center_horizontal" />

        </LinearLayout>

    </ScrollView>


    <Button android:id="@+id/onboarding_screen1_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_screen_1_cta"
        android:gravity="center"
        android:textSize="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/onboarding_screen1_top_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-65dp"
        android:textAllCaps="false"
        android:theme="@style/BlueButton" />

</RelativeLayout>
